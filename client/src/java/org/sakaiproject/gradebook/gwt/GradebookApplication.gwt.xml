<module>

	<!-- Inherit the core Web Toolkit stuff.                  -->
	<inherits name='com.google.gwt.user.User'/>
	<!--inherits name='com.google.gwt.json.JSON'/-->
	<!--inherits name='com.google.gwt.animation.Animation'/-->
	<!-- Inherit internationalization 						  -->
	<inherits name='com.google.gwt.i18n.I18N'/>
	
	<!--inherits name="com.google.gwt.gears.Gears" /-->
	
	<!-- Inherit the Ext-GWT (gxt-1.1) Toolkit library -->
	<inherits name='com.extjs.gxt.ui.GXT'/>
	
	<!-- Specify the app entry point class.                   -->
	<entry-point class='org.sakaiproject.gradebook.gwt.client.GradebookApplication'/>
    
  	<!-- Define the RPC service -->
  	<!-- This servlet is the original, non-sakai one. It should mostly work still, but there are some new methods for the setup screen that aren't implemented -->
  	<!--servlet path="/rpc/grades.rpc" class="org.sakaiproject.gradebook.gwt.server.GradebookServiceImpl"/-->
  	
  	<!-- This servlet is the mock sakai one. It doesn't require any sakai dependencies, and won't work with the default checked in pom.xml : you should copy over it with standalone-pom.xml to run this -->
  	<servlet path="/rpc/grades.rpc" class="org.sakaiproject.gradebook.gwt.sakai.mock.GradebookToolFacadeMockImpl"/>
  
  	<!-- This is the real sakai servlet. It requires all the sakai dependencies, and needs to be deployed in Tomcat with the rest of sakai -->
  	<!--servlet path="/rpc/grades.rpc" class="org.sakaiproject.gradebook.gwt.sakai.GradebookToolFacadeImpl"/-->
  
  	<servlet path="/importHandler" class="org.sakaiproject.gradebook.gwt.server.ImportHandler"/>
  
  	<servlet path="/export" class="org.sakaiproject.gradebook.gwt.server.ImportHandler"/>
  	
  	<servlet path="/final-grade-submission" class="org.sakaiproject.gradebook.gwt.server.FinalGradeSubmissionHandler"/>
  
  	<set-property name="gwt.suppressNonStaticFinalFieldWarnings" value="true" /> 

	<!-- Rebind the entry point if Gears is not installed -->
  	<!--replace-with class="org.sakaiproject.gradebook.gwt.client.action.RemoteCommandGears">
    	<when-type-is class="org.sakaiproject.gradebook.gwt.client.action.RemoteCommand"/>
    	<when-property-is name="gears.installed" value="true"/>
  	</replace-with-->

</module>
